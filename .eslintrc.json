{
    "env": {
        "browser": true,
        "jquery": true
    },
    "globals": {
        "angular": true,
        "_": true,
        "moment": true,
        "jstz": true,
        "google": true,
        "Rx": true
    },
    "extends": ["airbnb", "angular"],
    "parserOptions":{
        "sourceType": "script"
    },
    "rules": {
        "max-len": [
            "error", 120, 2,
            {
                "ignoreComments": true
            }
        ],
        "strict" : "off",
        "no-use-before-define": "off",
        "no-var": "off",
        "prefer-template": "off",
        "prefer-arrow-callback": "off",
        "vars-on-top": "off",
        "no-param-reassign": "off",
        "func-names": "off",
        "no-else-return": "off",
        "camelcase": "off",
        "object-shorthand": "off",
        "require-jsdoc": "error",
        "angular/controller-as-vm": "off",
        "no-extra-boolean-cast": "off",
        "angular/di": [
          "error",
          "$inject"
        ],
        "eqeqeq": "error",
        "prefer-spread": "off"
    }
}
